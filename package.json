{
  "name": "typescript-api",
  "version": "1.0.0",
  "description": "TypeScript Node.js API",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/index.js",
    "start:dev": "ts-node-dev --files src/index.ts | pino-pretty -c",
    "lint": "npx eslint ./src ./test --ext .ts",
    "lint:fix": "npx eslint ./src ./test --ext .ts --fix",
    "style:check": "npx prettier --check src/**/*.ts test/**/*.ts",
    "style:fix": "npx prettier --write src/**/*.ts test/**/*.ts",
    "test": "npm run style:check && npm run lint && npm run test:unit && npm run test:functional",
    "test:unit": "jest --forceExit --detectOpenHandles",
    "test:functional": "jest --projects ./test --runInBand"
  },
  "postinstall": "npm run build",
  "engines": {
    "node": "12"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ryan-Menezes/node-typescript-api.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "api"
  ],
  "author": "Ryan de Menezes",
  "license": "MIT",
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/config": "^3.3.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/http-status-codes": "^1.2.0",
    "@types/jest": "^29.2.3",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/lodash": "^4.14.191",
    "@types/module-alias": "^2.0.1",
    "@types/mongoose": "^5.11.97",
    "@types/multer": "^1.4.7",
    "@types/nock": "^11.1.0",
    "@types/node": "^18.11.9",
    "@types/pino": "^7.0.5",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "eslint": "^8.27.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.3.1",
    "nock": "^13.2.9",
    "pino-pretty": "^9.1.1",
    "prettier": "^2.7.1",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@overnightjs/core": "^1.7.6",
    "ajv": "^8.11.2",
    "axios": "^0.19.0",
    "bcryptjs": "^2.4.3",
    "config": "^3.3.8",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-openapi-validator": "^5.0.0",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "mongoose": "^6.7.2",
    "pino": "^8.7.0",
    "swagger-ui-express": "^4.6.0"
  }
}
